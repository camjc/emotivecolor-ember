<h1>{{Emotivecolor.FBUser.name}}</h1>
{{#if Emotivecolor.FBUser}}
    <div>
        {{!-- id,name,location,gender,hometown,age_range,political,religion,sports,education,relationship_status,languages,locale --}}
        {{!--<img class='ico-fb' {{bindAttr src="Emotivecolor.FBUser.picture.data.url" alt="Emotivecolor.FBUser.name"}} /> --}}
        <ul class='list-left'>
            <li>{{Emotivecolor.FBUser.gender}}</li>
            <li>Currently in: {{Emotivecolor.FBUser.location.name}}</li>
            <li>Hometown: {{Emotivecolor.FBUser.hometown.name}}</li>
            <li>{{Emotivecolor.FBUser.age_range}}</li> {{!-- Not working --}}
            <li>{{Emotivecolor.FBUser.birthday}}</li> {{!-- Not working --}}
            <li>{{Emotivecolor.FBUser.locale}}</li>
            <li>{{Emotivecolor.FBUser.languages}}</li>
            <li>{{Emotivecolor.FBUser.relationship_status}}</li>
            <li>{{Emotivecolor.FBUser.education}}</li>
            <li>{{Emotivecolor.FBUser.sports}}</li>
            <li>{{Emotivecolor.FBUser.religion}}</li>
            <li>{{Emotivecolor.FBUser.political}}</li>
            <li>{{Emotivecolor.FBUser.id}}</li>
        </ul>
        <button {{action "logout" target="FB"}}>Logout</button>
    </div>
{{else}}
        <button {{action "login" target="FB"}}>Login</button>
{{/if}}